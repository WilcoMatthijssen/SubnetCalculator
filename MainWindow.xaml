<Window 
x:Class	= "SubnetCalculator.MainWindow"
xmlns	= "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x	= "http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d	= "http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc= "http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local	= "clr-namespace:SubnetCalculator"
mc:Ignorable= "d"
FontSize	= "24"
Title		= "Subnet Calculator" 
Height		= "700" 
Width		= "550"
>

<Window.Resources>
<Style TargetType="{x:Type TextBlock}">
<Setter Property="Foreground" Value="Green"/>
<Setter Property="VerticalAlignment" Value="Bottom"/>
<Setter Property="Margin" Value="20 0 20 0"/>
</Style>

<Style TargetType="{x:Type TextBox}">
<Setter Property="TextAlignment" Value="Center"/>
<Setter Property="Margin" Value="20 0 20 0"/>
<Setter Property="IsReadOnly" Value="True" />
</Style>
</Window.Resources>
	


<Grid Background="WhiteSmoke" >
<Grid.ColumnDefinitions>
<ColumnDefinition/>
<ColumnDefinition/>
</Grid.ColumnDefinitions>
		
<Grid.RowDefinitions>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
</Grid.RowDefinitions>
		
<TextBlock
Grid.Row	= "0"
Grid.Column	= "0"
Text		= "Network Class"
/>

<Grid Grid.Row="1" Grid.Column="0" Margin="20 0 20 0">
<Grid.ColumnDefinitions>
<ColumnDefinition/>
<ColumnDefinition/>
<ColumnDefinition/>
</Grid.ColumnDefinitions>
			
<RadioButton 
Grid.Column="0"
Content="A"
GroupName="Network Class"
/>
<RadioButton 
Grid.Column="1"
Content="B"
GroupName="Network Class"
/>
<RadioButton 
Grid.Column="2"
Content="C"
GroupName="Network Class" 
IsChecked="True"
/>

</Grid>
		
		
		
<TextBlock
Grid.Row="0"
Grid.Column="1"
Text="First Octet Range"
/>


	
<TextBox
Grid.Row="1"
Grid.Column="1"	
Text="192 - 223"
/>

		

<TextBlock
Grid.Row="2"
Grid.Column="0"
Text="IP Address"
/>


<TextBox
Grid.Row="3"
Grid.Column="0"
Text="192.168.0.1"
IsReadOnly="False"
/>

<TextBlock
Grid.Row="2"
Grid.Column="1"
Text="Hex IP Address"
/>

<TextBox
Grid.Row="3"
Grid.Column="1"
TextAlignment="Center"
Text="C0.A8.00.01"
/>



<TextBlock
Grid.Row="4"
Grid.Column="0"
VerticalAlignment="Bottom"
Text="Subnet Mask"
Margin="20 0 20 0"
/>


<ComboBox
Grid.Row="5"
Grid.Column="0"
Margin="20 0 20 0"
SelectionChanged="SubnetMask_SelectionChanged"
>
<ComboBoxItem Content="255.255.255.0" IsSelected="True" />
<ComboBoxItem Content="255.255.255.128"/>
<ComboBoxItem Content="255.255.255.192"/>
<ComboBoxItem Content="255.255.255.224"/>
<ComboBoxItem Content="255.255.255.248"/>
<ComboBoxItem Content="255.255.255.252"/>
</ComboBox>


<TextBlock
Grid.Row="4"
Grid.Column="1"
VerticalAlignment="Bottom"
Text="Wildcard Mask"
Margin="20 0 20 0"
/>
<TextBox
Grid.Row="5"
Grid.Column="1"
Text="0.0.0.255"
/>



<TextBlock
Grid.Row="6"
Grid.Column="0"
VerticalAlignment="Bottom"
Text="Subnet Bits"
Margin="20 0 20 0"
/>


<ComboBox
Grid.Row="7"
Grid.Column="0"
Margin="20 0 20 0"
SelectionChanged="SubnetBits_SelectionChanged"
>
<ComboBoxItem Content="0" IsSelected="True" />
<ComboBoxItem Content="1"/>
<ComboBoxItem Content="2"/>
<ComboBoxItem Content="3"/>
<ComboBoxItem Content="4"/>
<ComboBoxItem Content="5"/>
<ComboBoxItem Content="6"/>
</ComboBox>


<TextBlock
Grid.Row="6"
Grid.Column="1"
VerticalAlignment="Bottom"
Text="Mask Bits"
Margin="20 0 20 0"
/>

<ComboBox
Grid.Row="7"
Grid.Column="1"
Margin="20 0 20 0"
SelectionChanged="MaskBits_SelectionChanged"
>
<ComboBoxItem Content="24" IsSelected="True" />
<ComboBoxItem Content="25"/>
<ComboBoxItem Content="26"/>
<ComboBoxItem Content="27"/>
<ComboBoxItem Content="28"/>
<ComboBoxItem Content="30"/>
</ComboBox>


<TextBlock
Grid.Row="8"
Grid.Column="0"
VerticalAlignment="Bottom"
Text="Maximum Subnets"
Margin="20 0 20 0"
/>

<ComboBox
Grid.Row="9"
Grid.Column="0"
Margin="20 0 20 0"
SelectionChanged="MaxSubnets_SelectionChanged"
>
<ComboBoxItem Content="1" IsSelected="True" />
<ComboBoxItem Content="2"/>
<ComboBoxItem Content="4"/>
<ComboBoxItem Content="8"/>
<ComboBoxItem Content="16"/>
<ComboBoxItem Content="32"/>
<ComboBoxItem Content="64"/>
</ComboBox>



<TextBlock
Grid.Row="8"
Grid.Column="1"
Text="Hosts per Subnet"
/>

<ComboBox
Grid.Row="9"
Grid.Column="1"
Margin="20 0 20 0"
SelectionChanged="HostsPerSubnet_SelectionChanged"
>
<ComboBoxItem Content="254" IsSelected="True" />
<ComboBoxItem Content="126"/>
<ComboBoxItem Content="62"/>
<ComboBoxItem Content="30"/>
<ComboBoxItem Content="14"/>
<ComboBoxItem Content="6"/>
<ComboBoxItem Content="2"/>
</ComboBox>


<TextBlock
Grid.Row="10"
Text="Hosts Address Range"
Grid.ColumnSpan="2"
/>

<TextBox
Grid.Row="11"
Grid.ColumnSpan="2"
Text="192.168.0.1 - 192.168.0.254"
/>
	
<TextBlock
Grid.Row="12"
Grid.Column="0"
Text="Subnet ID"
/>
<TextBlock
Grid.Row="12"
Grid.Column="1"
Text="Broadcast Address"
/>

<TextBox
Grid.Row="13"
Grid.Column="0"
Text="192.168.0.0"
/>


	

<TextBox
Grid.Row="13"
Grid.Column="1"
Text="192.168.0.255"
/>


<TextBlock
Grid.Row="14"
Text="Subnet Bitmap"
Grid.ColumnSpan="2"
/>

<TextBox
Grid.Row="15"
Grid.ColumnSpan="2"
Text="10nnnnnn.nnnnnnnn.hhhhhhhh.hhhhhhhh"
/>

