<Window 
	x:Class	= "SubnetCalculator.MainWindow"
    xmlns	= "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x	= "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d	= "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc= "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local	= "clr-namespace:SubnetCalculator"
    mc:Ignorable= "d"
	FontSize	= "24"
    Title		= "Subnet Calculator" 
	Height		= "700" 
	Width		= "550"
>

<Grid Background="LightGray">
	<Grid.ColumnDefinitions>
		<ColumnDefinition/>
		<ColumnDefinition/>
	</Grid.ColumnDefinitions>
		
	<Grid.RowDefinitions>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
	</Grid.RowDefinitions>
		
	<TextBlock
		Grid.Row	= "0"
		Grid.Column	= "0"
		Text		= "Network Class"
		VerticalAlignment= "Bottom"
	/>

	<Grid Grid.Row="1" Grid.Column="0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
			
		<RadioButton 
			Grid.Column="0"
			Content="A"
			GroupName="Network Class"
		/>
		<RadioButton 
			Grid.Column="1"
			Content="B"
			GroupName="Network Class"
		/>
		<RadioButton 
			Grid.Column="2"
			Content="C"
			GroupName="Network Class" 
			IsChecked="True"
		/>
	</Grid>
		
		
		
	<TextBlock
		Grid.Row="0"
		Grid.Column="1"
		VerticalAlignment="Bottom"
		Text="First Octet Range"
	/>


	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="1"
		Grid.Column="1">
		<TextBlock
		TextAlignment="Center"
		Text="192 - 223"
	/>
	</Border>
		

	<TextBlock
		Grid.Row="2"
		Grid.Column="0"
		VerticalAlignment="Bottom"
		Text="IP Address"
	/>

	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="3"
		Grid.Column="0">
		<TextBlock
		Text="TEXTBOX 192.169.0.1"
	/>
	</Border>
		
		
	<TextBlock
		Grid.Row="2"
		Grid.Column="1"
		VerticalAlignment="Bottom"
		Text="Hex IP Address"
	/>

	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="3"
		Grid.Column="1">
		<TextBlock
		TextAlignment="Center"
		Text="C0.A8.00.01"
	/>
	</Border>


	<TextBlock
		Grid.Row="4"
		Grid.Column="0"
		VerticalAlignment="Bottom"
		Text="Subnet Mask"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="5"
		Grid.Column="0">
		<TextBlock
		Text="255.255.255.0"
	/>
	</Border>

	<TextBlock
		Grid.Row="4"
		Grid.Column="1"
		VerticalAlignment="Bottom"
		Text="Wildcard Mask"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="5"
		Grid.Column="1">
		<TextBlock
		TextAlignment="Center"
		Text="0.0.0.255"
	/>
	</Border>


	<TextBlock
		Grid.Row="6"
		Grid.Column="0"
		VerticalAlignment="Bottom"
		Text="Subnet Bits"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="7"
		Grid.Column="0">
		<TextBlock
		Text="0"
	/>
	</Border>


	<TextBlock
		Grid.Row="6"
		Grid.Column="1"
		VerticalAlignment="Bottom"
		Text="Mask Bits"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="7"
		Grid.Column="1">
		<TextBlock
		Text="24"
	/>
	</Border>

	<TextBlock
		Grid.Row="8"
		Grid.Column="0"
		VerticalAlignment="Bottom"
		Text="Maximum Subnets"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="9"
		Grid.Column="0">
		<TextBlock
		Text="1"
	/>
	</Border>


	<TextBlock
		Grid.Row="8"
		Grid.Column="1"
		VerticalAlignment="Bottom"
		Text="Hosts per Subnet"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="9"
		Grid.Column="1">
		<TextBlock
		Text="254"
	/>
	</Border>

	<TextBlock
		Grid.Row="10"
		VerticalAlignment="Bottom"
		Text="Hosts Address Range"
		Grid.ColumnSpan="2"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="11"
		Grid.ColumnSpan="2">
		<TextBlock
		Text="192.168.0.1 - 192.168.0.254"
	/>
	</Border>

	<TextBlock
		Grid.Row="12"
		Grid.Column="0"
		VerticalAlignment="Bottom"
		Text="Subnet ID"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="13"
		Grid.Column="0">
		<TextBlock
		TextAlignment="Center"
		Text="192.168.0.0"
	/>
	</Border>

	<TextBlock
		Grid.Row="12"
		Grid.Column="1"
		VerticalAlignment="Bottom"
		Text="Broadcast Address"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="13"
		Grid.Column="1">
		<TextBlock
		TextAlignment="Center"
		Text="192.168.0.255"
	/>
	</Border>

	<TextBlock
		Grid.Row="14"
		Text="Subnet Bitmap"
		VerticalAlignment="Bottom"
		Grid.ColumnSpan="2"
	/>
	<Border BorderThickness="1" BorderBrush="Black"
		Grid.Row="15"
		Grid.ColumnSpan="2">
		<TextBlock
		TextAlignment="Center"
		Text="10nnnnnn.nnnnnnnn.hhhhhhhh.hhhhhhhh"
	/>
	</Border>
	<!--
	<ComboBox
		Grid.Row="87"
		Grid.Column="1"
		Text="Subnet Bits"
		>
	
		<ComboBoxItem>ComboBox Item #1</ComboBoxItem>
		<ComboBoxItem IsSelected="True">ComboBox Item #2</ComboBoxItem>
		<ComboBoxItem>ComboBox Item #3</ComboBoxItem>
	</ComboBox>
-->

</Grid>
</Window>
